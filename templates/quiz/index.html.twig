{# {% extends 'base.html.twig' %} #}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

  <link rel="stylesheet" href="{{asset('/assets/css/reset.css')}}">
    <link rel="stylesheet" href="{{asset('/assets/css/quiz/questionsbis.css')}}"> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>  
{% endblock %}

{% block body %}
<main>
        <div class="container-fluid backgroundmiseensituation">
            <div class="d-flex justify-content-end">
                <a class="quitter" href={{path('app_home')}}><img src="/assets/img/iconesQuiz/fab-quitter-white.svg" alt="quitter"></a>
            </div>

            <div class="d-flex test">
                

                <img class="cadreimage" src="/assets/img/{{ question.img }}" alt="question.img" >

                <section id="sectionquestions">
                  
                    <h3 id="question" class="text-center"> "{{ question.label }}"</h3>

                    <div class="reponses text-center d-flex flex-column">
        
                        <form method="post" id="formQuiz" action={{path('app_quiz_save')}}>

                            <input type="hidden" name="id_answer" id="data" value="">
                            <input type="hidden" name="id_question" value="{{ question.id }}">

                             {% for answer in question.answers %}
                            <input type="radio"  class="radioreponse"> <label class="answ" data-id="{{ answer.id }}" for="reponse" >{{ answer.label }}</label>
                           
                            {% endfor %}
                            
                          <button method="" type="button" id="btnvalidform" class="questionsuivant bouton" name="clicked">Suivant</buton>
                        
                           
                        </form>
                        
                    </div>
                </section>

            </div>

        </div>

    </main>

{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="/assets/js/index.js"></script>
 {% endblock %}
