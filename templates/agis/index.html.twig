{% extends 'base.html.twig' %}

{% block title %}Hello AgisController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<h1> DES OUTILS POUR SENSIBILISER</h1>
<h2> Articles </h2>
<div >
    {% for article in articles %}
        <a href="{{ path('app_article', {'slug':article.slug} ) }}">
            <img src="" alt="">
            <h3>{{ article.title }}</h3>
            <p></p>
            <p>Voir plus</p>
        </a>
    {% endfor %}
   
</div>

<h2> Ateliers </h2>
<div >
{% for workshop in workshops %}
    <a href="{{ path('app_workshop', {'slug':workshop.slug} ) }}">
        <img src="" alt="">
        <h3>{{ workshop.title }}</h3>
        <p></p>
        <p>Voir plus</p>
    </a>
{% endfor %}
</div>
{% endblock %}
