{% extends 'base.html.twig' %}

{% block title %}Hello QuizQRController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> QR</h1>

   <img src="{{question.img}}" alt="a venir">
   
    <h1>Details : {{ question.label }}</h1>
    
    <form method="post" action={{path('app_quiz_save')}}>

    <input type="hidden" name="id_answer" id="data" value="">
    <input type="hidden" name="id_question" value="{{ question.id }}">
   
    {% for answer in question.answers %}
    
    <div class="answ" data-id="{{answer.id}}">
    {{ answer.label }}<br>
  </div>
    {% endfor %}
    <button method="" type="submit" name="clicked">Suivant</buton>

    </form>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="/assets/js/index.js"></script>
 {% endblock %}